<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="@dimen/contentSmall"
    android:paddingEnd="@dimen/contentSmall">

    <chooongg.frame.core.widget.autofit.AutofitTextView
        android:id="@+id/title_tv_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="TITLE"
        android:textSize="@dimen/textHeadline6"
        android:visibility="gone"
        app:autofit_minTextSize="@dimen/textSubtitle1"
        app:autofit_sizeToFit="true" />

    <chooongg.frame.core.widget.autofit.AutofitTextView
        android:id="@+id/title_tv_subtitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:text="SUBTITLE"
        android:textSize="@dimen/textSubtitle2"
        android:visibility="gone"
        app:autofit_minTextSize="@dimen/textOverline"
        app:autofit_sizeToFit="true" />

</LinearLayout>