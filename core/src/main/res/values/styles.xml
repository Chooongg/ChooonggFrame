<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--框架基本主体|必须使用或继承-->
    <style name="Theme.Chooongg.DayNight" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="actionBarSize">@dimen/d48</item>
        <item name="android:textCursorDrawable">@drawable/edit_cursor</item>
        <item name="android:windowAnimationStyle">@style/ChooonggWindowAnimation</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden|adjustResize</item>
        <item name="android:configChanges">keyboardHidden|orientation|screenSize</item>
    </style>

    <style name="Theme.Chooongg.Toolbar.Primary" parent="Widget.MaterialComponents.Toolbar.Primary" />

    <style name="Theme.Chooongg.Toolbar.Surface" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="android:theme">@style/ThemeOverlay.Chooongg.Toolbar.Surface</item>
    </style>

    <style name="Theme.Chooongg.Toolbar.PrimarySurface" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="android:theme">@style/ThemeOverlay.Chooongg.Toolbar.Surface</item>
    </style>

    <style name="ThemeOverlay.Chooongg.Toolbar.Surface" parent="ThemeOverlay.MaterialComponents.Toolbar.Surface">
        <item name="actionMenuTextColor">@color/colorOnSurface</item>
    </style>

    <style name="ChooonggWindowAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/parallax_horizontal_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/parallax_horizontal_open_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/parallax_horizontal_close_enter
        </item>
        <item name="android:activityCloseExitAnimation">@anim/parallax_horizontal_close_exit</item>
    </style>

    <style name="ShapeableImageViewCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
    </style>

    <style name="ShapeableImageViewCorner.Circle" parent="ShapeableImageViewCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeableImageViewCorner.Diamond" parent="ShapeableImageViewCorner">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>