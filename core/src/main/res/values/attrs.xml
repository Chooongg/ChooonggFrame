<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--自动文字大小调整-->
    <declare-styleable name="AutofitTextView">
        <!-- 最小文字大小 -->
        <attr name="autofit_minTextSize" format="dimension" />
        <!-- 精度，精度越低耗时越高 -->
        <attr name="autofit_precision" format="float" />
        <!-- 是否自动调整 -->
        <attr name="autofit_sizeToFit" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ChooonggToolBar">
        <attr name="centerTitle" format="boolean" />
    </declare-styleable>

    <declare-styleable name="MaskEditText">
        <attr format="string" name="met_mask"/>
    </declare-styleable>

    <declare-styleable name="RoundedImageView">
        <attr name="cornerRadius" format="dimension" />
        <attr name="cornerRadiusTopLeft" format="dimension" />
        <attr name="cornerRadiusTopRight" format="dimension" />
        <attr name="cornerRadiusBottomLeft" format="dimension" />
        <attr name="cornerRadiusBottomRight" format="dimension" />
        <attr name="borderWidth" format="dimension" />
        <attr name="borderColor" format="color" />
        <attr name="mutateBackground" format="boolean" />
        <attr name="isOval" format="boolean" />
        <attr name="android:scaleType" />
        <attr name="tileMode">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
        <attr name="tileModeX">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
        <attr name="tileModeY">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
    </declare-styleable>

</resources>