<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--自动文字大小调整-->
    <declare-styleable name="AutofitTextView">
        <!-- 最小文字大小 -->
        <attr name="autofit_minTextSize" format="dimension" />
        <!-- 精度，精度越低耗时越高 -->
        <attr name="autofit_precision" format="float" />
        <!-- 是否自动调整 -->
        <attr name="autofit_sizeToFit" format="boolean" />
    </declare-styleable>

    <!--TitleBar-->
    <declare-styleable name="AbsTitleBar">
        <attr name="bar_title" format="string" />
        <attr name="bar_subTitle" format="string" />
        <attr name="bar_autoBack" format="boolean" />
        <attr name="bar_autoColor" format="boolean" />
        <attr name="bar_keepStatusBar" format="boolean" />
        <attr name="bar_dividerStyle" format="enum">
            <enum name="none" value="0" />
            <enum name="line" value="1" />
            <enum name="elevation" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ChooonggToolBar">
        <attr name="centerTitle" format="boolean" />
    </declare-styleable>

</resources>