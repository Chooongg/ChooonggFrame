<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tv_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <chooongg.frame.core.widget.roundedImageView.RoundedImageView
        android:id="@+id/iv_image"
        android:layout_width="@dimen/d72"
        android:layout_height="@dimen/d72"
        android:src="@drawable/ic_launcher_background"
        app:borderColor="@color/colorPrimary"
        app:borderWidth="@dimen/d2"
        app:isOval="true"
        app:layout_constraintEnd_toEndOf="@id/tv_test"
        app:layout_constraintStart_toStartOf="@id/tv_test"
        app:layout_constraintTop_toBottomOf="@id/tv_test" />


</androidx.constraintlayout.widget.ConstraintLayout>